{
  "name": "kitopia",
  "version": "0.1.0",
  "description": "A high-performance, type-safe TypeScript web framework with a Rust core.",
  "scripts": {
    "build": "tsdown",

    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",

    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "pnpm dlx serve docs"
  },

  "dependencies": {
    "@frankwww/kitopia-core": "^0.1.0",
    "acorn": "^8.15.0",
    "acorn-walk": "^8.3.4"
  },
  "devDependencies": {
    "@frankwww/kitopia-types": "^0.1.0",
    "@vitest/coverage-v8": "^4.0.9",
    "tsdown": "^0.15.0",
    "typedoc": "^0.28.14",
    "vitest": "^4.0.9"
  },
  "peerDependencies": {
    "typescript": "^5.9.2"
  },

  "repository": {
    "type": "git",
    "url": "https://github.com/Frank-III/kitopia.git"
  },
  "homepage": "https://github.com/Frank-III/kitopia",
  "bugs": {
    "url": "https://github.com/Frank-III/kitopia/issues"
  },

  "license": "MIT",
  "author": {
    "name": "Nehu√©n",
    "url": "https://github.com/nehu3n"
  },

  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },

  "files": [
    "dist",
    "readme.md",
    "package.json"
  ]
}
